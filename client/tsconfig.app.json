{
	"extends": "@vue/tsconfig/tsconfig.dom.json",
	"target": "ES2022",
	"lib": ["ES2023"],
	"module": "ESNext",
	"compilerOptions": {
		"tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",

		/* Linting */
		"strict": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"noFallthroughCasesInSwitch": true,
		"noUncheckedSideEffectImports": true
	},
	"include": [
		"src/**/*.ts",
		"src/**/*.tsx",
		"src/**/*.vue",
		"src/main.ts",
		"src/utils.ts"
	]
}
