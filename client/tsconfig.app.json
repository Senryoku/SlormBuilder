{
	"extends": "@vue/tsconfig/tsconfig.dom.json",
	"compilerOptions": {
		"paths": {
			"@/*": ["./src/*"]
		},

		"tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",
		"lib": ["ES2023", "dom"],

		/* Linting */
		"strict": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"noFallthroughCasesInSwitch": true,
		"noUncheckedSideEffectImports": true
	},
	"include": [
		"src/**/*.ts",
		"src/**/*.tsx",
		"src/**/*.vue",
		"src/main.ts",
		"src/utils.ts"
	]
}
